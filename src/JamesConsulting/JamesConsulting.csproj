<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>JamesConsulting</PackageId>
        <Authors>Rudy James</Authors>
        <Company>James Consulting LLC</Company>
        <Product>James Consulting Core Library</Product>
        <Copyright>Copyright (c) 2020 - 2025 All Rights Reserved</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/jamesconsultingllc/JamesConsulting</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <ProjectGuid>9F232F91-5328-4EE7-BC83-AB21CBA9C18B</ProjectGuid>
        <LangVersion>default</LangVersion>
        <Nullable>enable</Nullable>
        <TargetFrameworks>net462;net6.0;net7.0;net8.0;net9.0;net10.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <CodeAnalysisRuleSet>..\..\.sonarlint\james-consulting-corecsharp.ruleset</CodeAnalysisRuleSet>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <EnablePackageValidation>true</EnablePackageValidation>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DocumentationFile>bin\Debug\JamesConsulting.xml</DocumentationFile>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    </PropertyGroup>

    <ItemGroup>
        <AdditionalFiles Include="..\..\.sonarlint\james-consulting-core\CSharp\SonarLint.xml" Link="SonarLint.xml"/>
    </ItemGroup>

    <!-- Use 8.0.0 for net6/net7 (last broadly compatible version); newer TFMs get 10.0.0 -->
    <ItemGroup Condition="$(TargetFramework) == 'net6.0' OR $(TargetFramework) == 'net7.0'">
        <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) != 'net6.0' AND $(TargetFramework) != 'net7.0'">
        <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="10.0.0" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Metalama.Framework" Version="2025.1.16"/>
        <PackageReference Include="Metalama.Migration" Version="2025.1.16"/>
        <PackageReference Include="Metalama.Patterns.Contracts" Version="2025.1.16"/>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.4"/>
        <PackageReference Include="Utf8Json" Version="1.3.7"/>
        <PackageReference Update="Nerdbank.GitVersioning" Version="3.9.50" />
    </ItemGroup>

</Project>